@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "BP Calculator";
}

<div style="display: flex; flex-direction: column; align-items: center; min-height: 100vh; font-family: Arial, sans-serif;">

    <h1 style="color: #333;">Blood Pressure Calculator</h1>

    <form method="post" style="display: flex; flex-direction: column; width: 250px; gap: 10px; margin-top: 20px;">
        <input asp-for="BP.Systolic" placeholder="Systolic (70-190)" style="padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
        <input asp-for="BP.Diastolic" placeholder="Diastolic (40-100)" style="padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
        <button type="submit" style="background-color: orange; color: white; padding: 10px; border: none; border-radius: 5px; cursor: pointer;">Calculate</button>
    </form>

   
</div>
